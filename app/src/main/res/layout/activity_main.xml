<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.donadonydonaji.calculadorasimple.MainActivity">

       <TextView
           android:id="@+id/txtNumero"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

           app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
           android:layout_marginTop="8dp"
           android:layout_marginRight="8dp"
           android:layout_marginLeft="8dp" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="7"
        android:id="@+id/btn7"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/txtNumero"
        android:layout_alignParentLeft="true"
        android:onClick="onClickBtn7"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/btn4"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="8"
        android:id="@+id/btn8"
        android:layout_above="@+id/btn4"
        android:layout_toRightOf="@+id/btn7"
        android:onClick="onClickBtn8"
        android:textSize="35dp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btn5"
        app:layout_constraintLeft_toRightOf="@+id/btn7"
        android:layout_marginLeft="8dp" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="9"
        android:id="@+id/btn9"
        android:layout_alignTop="@+id/btn8"
        android:layout_toRightOf="@+id/btn8"
        android:onClick="onClickBtn9"
        android:textSize="35dp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btn6"
        app:layout_constraintLeft_toRightOf="@+id/btn8"
        android:layout_marginLeft="8dp" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="4"
        android:id="@+id/btn4"
        android:layout_below="@+id/btn7"
        android:layout_alignLeft="@+id/btn7"
        android:onClick="onClickBtn4"
        android:textSize="35dp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btn1"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="5"
        android:id="@+id/btn5"
        android:layout_alignTop="@+id/btn4"
        android:layout_toLeftOf="@+id/btn9"
        android:onClick="onClickBtn5"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/btn4"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btn2" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="6"
        android:id="@+id/btn6"
        android:layout_alignTop="@+id/btn5"
        android:layout_alignLeft="@+id/btn9"
        android:onClick="onClickBtn6"
        android:textSize="35dp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btn3"
        app:layout_constraintLeft_toRightOf="@+id/btn5"
        android:layout_marginLeft="8dp" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="1"
        android:id="@+id/btn1"
        android:layout_below="@+id/btn4"
        android:layout_alignParentLeft="true"
        android:onClick="onClickBtn1"
        android:textSize="35dp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtNumero"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="2"
        android:id="@+id/btn2"
        android:layout_alignTop="@+id/btn1"
        android:layout_toLeftOf="@+id/btn9"
        android:onClick="onClickBtn2"
        android:textSize="35dp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toRightOf="@+id/btn1"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtNumero" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="3"
        android:id="@+id/btn3"
        android:layout_alignTop="@+id/btn2"
        android:layout_alignLeft="@+id/btn6"
        android:onClick="onClickBtn3"
        android:textStyle="bold"
        android:textSize="35dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtNumero"
        app:layout_constraintLeft_toRightOf="@+id/btn2"
        android:layout_marginLeft="8dp" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="0"
        android:id="@+id/btn0"
        android:layout_below="@+id/btn1"
        android:layout_alignLeft="@+id/btn1"
        android:layout_alignRight="@+id/btn2"
        android:onClick="onClickBtn0"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/btnPunto"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btn8" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="+"
        android:id="@+id/btnMas"
        android:layout_alignTop="@+id/btn9"
        android:layout_toRightOf="@+id/btn9"
        android:layout_alignParentRight="true"
        android:onClick="onClickSuma"
        android:textSize="39dp"
        android:layout_above="@+id/btn6"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toRightOf="@+id/btn3"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtNumero" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="-"
        android:id="@+id/btnMenos"
        android:onClick="onClickResta"
        android:textSize="37dp"
        android:layout_above="@+id/btnBorrar"
        android:layout_toRightOf="@+id/btnPunto"
        android:layout_alignRight="@+id/btnDivision"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnMas"
        app:layout_constraintLeft_toRightOf="@+id/btn6"
        android:layout_marginLeft="8dp" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="="
        android:id="@+id/btnIgual"
        android:onClick="onClickIgual"

        android:textSize="35dp"
        android:textStyle="bold"

        android:layout_alignRight="@+id/btnDivision"
        app:layout_constraintLeft_toRightOf="@+id/btn0"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btn9" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="+/-"
        android:id="@+id/btnPunto"
        android:onClick="onClickBtnPunto"
        android:layout_below="@+id/btn3"
        android:layout_toRightOf="@+id/btn0"
        android:textSize="35dp"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/btn0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btn7"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="x"
        android:id="@+id/btnMultiplicacion"
        android:onClick="onClickMultiplicacion"
        android:textSize="39dp"
        android:layout_below="@+id/btn9"
        android:layout_toRightOf="@+id/btn6"
        android:layout_alignRight="@+id/btnMas"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnMenos"
        app:layout_constraintLeft_toRightOf="@+id/btn9"
        android:layout_marginLeft="8dp" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="/"
        android:id="@+id/btnDivision"
        android:onClick="onClickDivision"
        android:textSize="39dp"
        android:layout_below="@+id/btnMultiplicacion"
        android:layout_toRightOf="@+id/btn6"
        android:layout_alignRight="@+id/btnMultiplicacion"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnMultiplicacion"
        app:layout_constraintLeft_toRightOf="@+id/btnIgual"
        android:layout_marginLeft="8dp" />

    <Button
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:text="C"
        android:id="@+id/btnC"
        android:onClick="onClickIgual"

        android:textSize="35dp"
        android:textStyle="bold"

        android:layout_alignRight="@+id/btnDivision"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btn0"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout >
